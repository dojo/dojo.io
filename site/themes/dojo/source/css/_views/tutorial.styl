// Individual Tutorials View

.body-tutorial {

	.page-content {

		.tutorial-content {
			margin-left: auto;
			margin-right: auto;
			max-width: $article-max-width;


			& > h1 {
				article-title();
				margin: pad(1.5) 0;
			}
		}

		.split-content {
			.tutorial-content {
				padding-bottom: 45vh;
			}

			.editor {
				width: 100vw;
				position: fixed;
				bottom: -35px;
				right: 0;
				left: 0;
				z-index: 3;
				.editor-frame {
					width: 100%;
					height: 40vh;
				}

				iframe {
					border: 0;
				}
			}
		}
	}

	.solution-container {
		area: #D4EEF8
		margin-bottom: vr(4);

		pre[class*="language-"] {
			margin-bottom: 0;
		}

		[id*='solution'] {
			transition(height 10s);
			overflow-y: hidden;
			pre {
				code {
					transition(opacity 0.3s);
					opacity: 1;
				}
			}

			&.hidden {
				height: 0;
				pre {
					code {
						opacity: 0.05;
					}
				}
			}
		}
	}

	.toggle-solution {
		button();
		width: 100%;

		&:active {
			  click-down();
		}

		&:focus {
			outline: 0;
		}
	}

	img{
		&.half-width {
			width: 40%;
			margin: 0 5%;
		}
	}
	p.center {
		text-align: center;
	}

	.aside {
		max-width: 30%;
		float: right;
		background-color: #DAFEFF;
		border: 1px solid darken(#DAFEFF, 5%);
		margin: 1em;
		padding: 0.5em;
		border-radius: 0.3em;

		p{
			font-size: 0.6rem;
		}

		strong {
			font-size: 1rem;
		}
	}
}