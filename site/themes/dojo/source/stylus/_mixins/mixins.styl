vr(n) {
	emRhythm(n);
}

pad(n) {
	vr(n * 2);
}

full() {
	position: relative;
	left: 50%;
	right: 50%;
	margin-left: -50vw;
	margin-right: -50vw;
	width: 100vw;
	max-width: 100vw;
}

extend() {
	margin-left: calc(50% - 50vw + 30%);
	margin-right: calc(50% - 50vw + 30%);
}
	
contain() {
	clearfix();
	max-width: $max-width;
	margin: 0 auto;
	padding-left: pad(4);
	padding-right: pad(4);
	width: 100%;
	
	+below(2) {
		padding-left: pad(2);
		padding-right: pad(2);
	}

	+below(1) {
		max-width: 100%;
	}
}

card() {
    padding: vr(3);
    background-color: #fff;
    z(1);
}

$header-height-default = 9;

header-height() {
	min-height: vr($header-height-default);

	+below(2) {
		min-height: vr($header-height-default - 1);
	}

	+below(1) {
		min-height: vr($header-height-default - 3);
	}
}

header-offset($gap = true) {
	if(!$gap) {
		$offset = $header-height-default;
	} else {
		$offset = $header-height-default + 3;
	}
	
	padding-top: vr($offset);

	+below(2) {
		padding-top: vr($offset - 1);
	}

	+below(1) {
		padding-top: vr($offset - 2);
	}
}

article-title() {
	text-align: center;

	+above(3) {
		font-size: emRhythm(4, $ms-down3);
	}
	
	+below(3) {
		font-size: emRhythm(4, $ms-down2);
	}

	+below(2) {
		font-size: emRhythm(3, $ms-down2);
	}
}


// z-depth official shadows
// (https://www.polymer-project.org/components/paper-elements/demo.html#paper-shadow)
$shadow1 = 0 1px 4px 0 rgba(0, 0, 0, 0.37);
$shadow2 = 0 6px 10px 0 rgba(0, 0, 0, 0.3), 0 2px 2px 0 rgba(0, 0, 0, 0.2);
$shadow3 = 0 13px 25px 0 rgba(0, 0, 0, 0.3), 0 11px 7px 0 rgba(0, 0, 0, 0.19);
$shadow4 = 0 20px 40px 0 rgba(0, 0, 0, 0.3), 0 14px 12px 0 rgba(0, 0, 0, 0.17);
$shadow5 = 0 27px 55px 0 rgba(0, 0, 0, 0.3), 0 17px 17px 0 rgba(0, 0, 0, 0.15);
$shadows = $shadow1, $shadow2, $shadow3, $shadow4, $shadow5;

z($depth = 1) {
	box-shadow: $shadows[$depth - 1];
}
