.body-front-page {
		background: #000000 url("images/bg.jpg") 50% 50% no-repeat;
		background-size: cover;
		height: 100%;
		margin: 0;
		padding: 0;
		width: 100%;

	.site-header {
  		background: rgba($header-background, 0.2);
	}

	.page-footer {
		background: rgba($header-background, 0.2);
		border-top: 0;
		.footer-logo {
			display: none;
		}
		.info {
			cell(1, 1);
			color: $color-grey;
			text-align: center;
		}
	}

	.bodyContainer {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		height: 100%;
		width: 90%;
		margin: auto;

		.dragon {
			width: 50%;
			padding-top: 2rem;
		}

		.teaser,
		.sub {
			color: #fff;
			font-weight: 300;
			letter-spacing: 0.2rem;
			text-transform: uppercase;
			text-shadow: 0px 0px 7px rgba(0, 0, 0, 1);
			text-align: center;
			margin: 0 auto;
			padding: 0 0 1rem 0;
		}

		.sub {
			
		}

		.btn {
			border: 1px solid rgba(255,255,255,0.2);
			border-radius: 2px;
			padding: 1em;
			transition: all 0.3s;
			display: block;
			margin: 2rem auto;
			click-down();


			&:hover {
				background: linear-gradient(45deg, rgba(10,7,57,0.5) 0%, rgba(104,3,47,0.5) 100%);
				border-color: rgba(#fff, 0.35);
				box-shadow: 0px 0px 20px 0px rgba(#fff,0.25);
			}

			.gh {
				display: block;
				width: auto;
				height: 1em;
			}
		}
	}
}
